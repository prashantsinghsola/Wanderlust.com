<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3 ">
            <div class=" col-10 offset-2">
                
               <h4><%= listing.title %></h4>
               
               
                <!-- <h3 >Listing Details</h3> -->
                <div class="card col-10 mt-3 show-card">
                     
                    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing">
                    <div class="card-body">
                        <p class="card-text"><b>
                               </b> <br>
                                <%= listing.description %> <br>
                               &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
 <br>
                                <%= listing.location %> <br>
                                <%= listing.country %>


                        </p>
                    </div>
                </div>


                <div class="btns mb-5">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 mb-2 ">Edit</a>
                    <br><br>
                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-dark  offset-3">Delete</button>
                    </form>
               
                </div class="col-10 offset-3 mb-3">
                  <hr>
                  <h4>Leave a review</h4>
                 <form class= mb-3 >
                    <div class="mb-3 mt-3">
                        <label for="rating" class="form-lable">Rating</label>
                        <input type="range"  min="1" max="5" id="rating" name="review[rating]" />
                    </div>
                    <div class="mb-3 mt-3">
                        <label class="form-lable" for="comment">Comment</label>
                        <textarea class="form-control" name="review[comment]" id="comment" cols="30" rows="2"></textarea>
                    </div>

                    <button class="btn btn-outline-dark">Submit</button>
                    
                 </form>

                <div>

               
             </div>
            </div>
        </div>
    </body>