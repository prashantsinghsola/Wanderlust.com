
<% layout("/layouts/boilerplate") %>

    
        <div class="row">
            <div class="col-8 offset-2">  <!-- offset-2 is for spacing from right -->
               <br>
                <h3>Create New Listing</h3>
                <br>
                <form method="POST" action="/listings"  novalidate class="needs-validation">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" class="form-control" placeholder="Enter a Title" required>

                        <!-- listing is object, now title is [key], it is used to on place -> let {title,description,...} =req.body;-->

                         <div class="valid-feedback">
                             Looks good!
                         </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-lable">Description</label>
                        <textarea name="listing[description]" class="form-control" required></textarea>

                        <div class="invalid-feedback">
                            Please Enter Short Description.
                        </div>
                    </div>


                    <div class="mb-3">
                        <label for="image" class="form-lable">Image Link</label>
                        <input type="text" name="listing[image][url]" placeholder="past link" class="form-control">
                        <!-- <input type="text" name="listing[image][filename]" placeholder="Filename"> -->

                    </div>



                    <div class="mb-3">
                        <label for="location" class="form-lable">Enter Location</label>
                        <input type="text" name="listing[location]" class="form-control" placeholder="Phitkari" required >
                        <div class="invalid-feedback">
                            Please Choose a Location.
                        </div>
                        
                    </div>

                    <div class="row ">

                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-lable">Enter Price</label>
                            <input  name="listing[price]" class="form-control" placeholder="eg.1200" required>

                            <div class="invalid-feedback">
                              Please Enter Valid Price.
                            </div>
                           

                        </div>


                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-lable">Enter Country</label>
                            <input type="text" name="listing[country]" class="form-control" placeholder="India" required>

                            <div class="invalid-feedback">
                                 Please Enter Country.
                            </div>

                        </div>
                    </div>
                    <button class="btn btn-dark mb-3">Add new</button>
                </form>
            </div>
        </div>
   
